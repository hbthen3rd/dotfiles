	i3bar_command i3bar --transparency
	font pango:CaskaydiaCove Nerd Font Mono 12
  position top
	status_command i3status-rs

	bindsym button4 nop
	bindsym button5 nop
	strip_workspace_numbers yes
  
  colors {
	  background #504945DF
	  statusline #d5c4a1DF
	  separator #3c3836DF
	  focused_workspace #3c3836DF #32302fDF #fabd2fDF
	  active_workspace #3c3836DF #504945DF #d5c4a1DF
	  inactive_workspace #3c3836DF #504945DF #d5c4a1DF
	  urgent_workspace   #7c6f64DF #fabd2fDF #3c3836DF
  }
}

